# Hospital Vision Backend Configuration
# Copy this file to .env and update values

# Database Configuration
DATABASE_PROVIDER=SqlServer

# SQL Server Connection Strings
SQLSERVER_CONNECTION=Server=your-server;Database=PRODUCT_HIS;User Id=your-user;Password=your-password;TrustServerCertificate=True;
QMS_CONNECTION=Server=your-server;Database=K_QMS_YHCT;User Id=your-user;Password=your-password;TrustServerCertificate=True;

# PostgreSQL Connection (alternative)
POSTGRESQL_CONNECTION=Host=localhost;Database=hospital_vision;Username=admin;Password=your-password

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
